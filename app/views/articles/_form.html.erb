<%= simple_form_for(article) do |f| %>
  <%= f.input :title %>
  <%= f.input :content, :input_html => {:rows => 10} %>
  <% if article.id? %>
    <%= f.submit "Update Article", class:"btn btn-primary mt-3"%>
  <% else %>
    <%= f.submit "Create Article", class:"btn btn-primary mt-3"%>
  <% end %>
<% end %>
